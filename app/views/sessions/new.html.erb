<% provide(:title, 'Log in') %>
<h1>Log in</h1>

<div class="row-fluid">
  <div class="col-md-6 col-md-offset-3">
    <%= simple_form_for(:session, url: login_path) do |f| %>
      <%= f.error_notification %>
      <%= f.input :email %>
      <%= f.input :password, label: "Password #{link_to '(forgot password?)', new_password_reset_path, class: 'font-normal'}".html_safe %>

      <%= f.label :remember_me, class: "checkbox inline" do %>
        <%= f.check_box :remember_me %>
        <span>Remember me on this computer</span>
      <% end %>
      
      <%= f.submit "Log in", class: "btn btn-primary" %>
    <% end %>
    
    <div class='m-t-xs'>New user? <%= link_to "Sign up now!", signup_path %></div>
  </div>
</div>